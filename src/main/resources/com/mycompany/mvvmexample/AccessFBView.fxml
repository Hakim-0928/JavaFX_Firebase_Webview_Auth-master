<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="467.0" prefWidth="496.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modelview.AccessFBView">
   <children>
      <MenuBar>
         <menus>
            <Menu text="Options">
               <items>
                  <MenuItem onAction="#switchToSignIn" text="Switch to Sign In" />
                  <MenuItem onAction="#switchToSignUp" text="Switch to Sign Up" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox alignment="CENTER_RIGHT" layoutX="7.0" prefHeight="166.0" prefWidth="485.0" spacing="10.0">
         <children>
            <TextField fx:id="nameField" alignment="TOP_LEFT" promptText="Name" />
            <TextField fx:id="majorField" promptText="Major" />
            <TextField fx:id="ageField" promptText="Age" />
            <HBox prefHeight="32.0" prefWidth="465.0">
               <children>
                  <Button fx:id="readButton" mnemonicParsing="false" onAction="#readRecord" prefHeight="37.0" prefWidth="46.0" text="Read" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="writeButton" mnemonicParsing="false" onAction="#addRecord" text="Write" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="regButton" mnemonicParsing="false" onAction="#regRecord" text="Register" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="switchroot" mnemonicParsing="false" onAction="#switchToSecondary" text="Switch" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
         </padding>
      </VBox>
      <TextArea fx:id="outputField" layoutX="6.0" layoutY="177.0" prefHeight="284.0" prefWidth="485.0" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
